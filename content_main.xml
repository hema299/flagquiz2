<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schema.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >

    <fragment
        android:layout_width="@dimen/flglytwidth"
        android:layout_height="match_parent"
        android:name="com.example.hemah.flagquiz.SettingsActivityFragment"
        android:id="@+id/settingsActivityfragment"
        android:layout_gravity="center_vertical"
        tools:layout="@layout/content_settings"
        android:layout_weight="1" />

    <fragment
        android:layout_width="@dimen/flglytwidth"
        android:layout_height="match_parent"
        android:name="com.example.hemah.flagquiz.MainActivityFragment"
        android:id="@+id/quizgragment"
        android:layout_gravity="center_vertical"
        tools:layout="@layout/content_main"
        android:layout_weight="2" />
</LinearLayout>